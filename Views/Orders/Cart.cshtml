
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using BookSale.Controllers
<h2>Cart</h2>

<body>

    <table cellpadding="2" cellspacing="2" border="1">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>
        </tr>

        @foreach(Item item in (List<Item>)Session["cart"])
        {
            <tr>
                <td> @item.Book.BookId</td>
            </tr>

        }



    </table>
</body>

